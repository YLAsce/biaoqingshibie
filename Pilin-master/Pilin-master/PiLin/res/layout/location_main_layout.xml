<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
     >
    <ListView
        android:id="@+id/lv_positions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/list_background"
        android:layout_weight="27"
        >
		
    </ListView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:padding="3dp"
        android:background="#bbbbbb"
        >
		<LinearLayout
		    android:layout_height="match_parent" 
		    android:layout_weight="0.3"
		    android:layout_width="0dp"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:focusable="true"
		    android:clickable="true"
		    android:background="@drawable/main_footbar_background"
		    >
		    <ImageView
	        android:contentDescription="@string/app_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/ibtn_location_start"
	        android:src="@drawable/position_selecter" />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:text="开始定位"
		        />
		</LinearLayout>
	    <LinearLayout
		    android:layout_height="match_parent" 
		    android:layout_weight="0.3"
		    android:layout_width="0dp"
		    android:orientation="vertical"
		    android:gravity="center">
	        <ImageView
	            android:contentDescription="@string/app_name"
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/ibtn_overlay"
		        android:clickable="true"
		        android:src="@drawable/btn_step_selector" />
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:text="查看踪迹"
		        />
	    </LinearLayout>  
	    <LinearLayout
		    android:layout_height="match_parent" 
		    android:layout_weight="0.3"
		    android:layout_width="0dp"
		    android:orientation="vertical"
		    android:focusable="true"
		    android:clickable="true"
		    android:background="@drawable/main_footbar_background"
		    android:gravity="center">  
	        <ImageView
	            android:contentDescription="@string/app_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/ibtn_stop_location"
		        android:src="@drawable/btn_stop_location" />
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000"
		        android:text="停止定位"
		        />
	    </LinearLayout> 
        
    </LinearLayout>
    
</LinearLayout>
